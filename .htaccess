<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin *
    Header set Access-Control-Allow-Headers "origin, x-requested-with, content-type"
    Header set Access-Control-Allow-Methods "POST, GET, OPTIONS"
</IfModule>

<filesMatch "\.(html|htm|js|css)$">
  FileETag None
  <ifModule mod_headers.c>
     Header unset ETag
     Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
     Header set Pragma "no-cache"
     Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
  </ifModule>
</filesMatch>

Options -Indexes

RedirectMatch 404 \.git
RedirectMatch 404 \.idea
RedirectMatch 404 /sites/conf.php$
RedirectMatch 404 /sites/conf.example.php$
RedirectMatch 404 /sites/.*/certs/.*$
RedirectMatch 404 /sites/.*/DICOM.*$
RedirectMatch 404 /sites/.*/documents/.*$
RedirectMatch 404 /sites/.*/hooks/.*$
RedirectMatch 404 /sites/.*/jobs/.*$
RedirectMatch 404 /sites/.*/log/.*$
RedirectMatch 404 /sites/.*/patients/.*$
RedirectMatch 404 /sites/.*/temp/.*$
RedirectMatch 404 /sites/.*/trash/.*$
RedirectMatch 404 /sites/.*/X12/.*$
